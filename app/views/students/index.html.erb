<p id="notice"><%= notice %></p>

<h1 class=" text-center text-info headings">Students</h1>

<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Age</th>
      <th>Education</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.firstname %></td>
        <td><%= student.lastname %></td>
        <td><%= student.age %></td>
        <td><%= student.education %></td>
        <td><%= link_to 'Show', student, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path, class: "btn btn-default" %>
