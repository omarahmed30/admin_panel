<!DOCTYPE html>
<html>
  <head>
    <title>AdminPanel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="icon" href="./admin_panel/Rumbler/images/rumbler_favicon.png" type="image/gif" sizes="16x16">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "Admin Panel", root_path, class: "navbar-brand" %>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to "Teachers", teachers_path %></li>
            <li><%= link_to "Students", students_path %></li>
            <li><%= link_to "Cohorts", cohorts_path %></li>
            <li><%= link_to "Courses", courses_path %></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Log In", new_user_session_path %></li>
          <% end %>
        </ul>

      </div>
    </nav>

    

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
